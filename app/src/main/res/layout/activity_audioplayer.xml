<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_icon"
        android:src="@drawable/music_list"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/artist"
        android:text="艺术家"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/name"
        android:text="音乐文件名称"
        android:textSize="18sp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout

        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/time"
            android:text="00：00/3:29"
            android:layout_gravity="right"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <SeekBar
            android:id="@+id/seekbar_audio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:maxHeight="6dp"
            android:minHeight="6dp" />
        <LinearLayout
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <Button
                android:id="@+id/btn_model"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="23dp"
                android:background="@drawable/music_all"
                android:layout_gravity="center_vertical" />

            <Button
                android:id="@+id/btn_pre"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="35dp"
                android:background="@drawable/music_pre"
                android:layout_gravity="center_vertical" />

            <Button
                android:id="@+id/btn_playandpause"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_marginLeft="35dp"
                android:background="@drawable/music_pause"
                android:layout_gravity="center_vertical" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="35dp"
                android:background="@drawable/music_next"
                android:layout_gravity="center_vertical"/>

            <Button
                android:id="@+id/btn_lyric"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_marginLeft="35dp"
                android:background="@drawable/music_lyric"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>