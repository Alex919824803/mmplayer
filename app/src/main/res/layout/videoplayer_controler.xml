<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/transparent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="视频标题"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:text="电量"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_system_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:text="时间"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/transparent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_voice"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/btn_voice" />

            <SeekBar
                android:id="@+id/seekbar_voice"
                android:thumb="@drawable/progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:maxHeight="6dp"
                android:minHeight="6dp" />

            <Button
                android:id="@+id/btn_switch"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:background="@drawable/btn_switch" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_current_time"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:text="当前时间" />

            <SeekBar
                android:id="@+id/seekbar_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:maxHeight="6dp"
                android:minHeight="6dp" />

            <TextView
                android:id="@+id/tv_duration"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:text="总时长" />
        </LinearLayout>

        <LinearLayout
            android:background="@color/transparent"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_exit"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/btn_return"
                    android:layout_gravity="center_vertical" />

                <Button
                    android:id="@+id/btn_pre"
                    android:layout_width="50dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="100dp"
                    android:background="@drawable/forward"
                    android:layout_gravity="center_vertical" />

                <Button
                    android:id="@+id/btn_playandpause"
                    android:layout_width="55dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="95dp"
                    android:background="@drawable/pause"
                    android:layout_gravity="center_vertical" />

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="50dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="85dp"
                    android:background="@drawable/next"
                    android:layout_gravity="center_vertical"/>

                <Button
                    android:id="@+id/btn_fullscreen"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="80dp"
                    android:background="@drawable/full"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>